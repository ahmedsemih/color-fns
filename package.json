{
  "name": "color-kit",
  "version": "0.0.0",
  "description": "A modern, lightweight, and tree-shakable utility library for working with colors in JavaScript and TypeScript. Easily convert between color formats like RGB, HEX, and HSL, generate random colors, and manipulate colors.",
  "keywords": [
    "color",
    "colors",
    "color-kit",
    "color-toolkit",
    "color-tools",
    "color-utils",
    "color-functions",
    "color-fns",
    "color-conversion",
    "color-manipulation",
    "color-library",
    "rgb",
    "hex",
    "hsl",
    "rgba",
    "utility",
    "utilities",
    "css-colors",
    "convert-color",
    "tree-shakable",
    "lightweight",
    "dependency-free",
    "javascript",
    "typescript"
  ],
  "license": "MIT",
  "author": "Ahmed Semih Erkan (https://github.com/ahmedsemih)",
  "homepage": "https://github.com/ahmedsemih/color-kit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmedsemih/color-kit.git"
  },
  "bugs": {
    "url": "https://github.com/ahmedsemih/color-kit/issues"
  },
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc",
    "build:esm": "rollup -c --environment BUILD:esm",
    "build:cjs": "rollup -c --environment BUILD:cjs",
    "build:js": "npm run build:esm && npm run build:cjs",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint",
    "format": "prettier --write '**/*.{ts,js,md,yml}'",
    "prepublishOnly": "npm run test && npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "rollup": "^4.44.1",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
